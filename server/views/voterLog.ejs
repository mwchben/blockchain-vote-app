<p class="text-center mt-4 text-red fw-semibold fs-2">Voter (Login/Register)</p>
<div class="mx-4 my-5 my-5">
  <div class="col-lg-6 mx-auto">
    <!-- navs -->
    <ul class="nav nav-pills nav-justified mb-5" id="ex1" role="tablist">
      <li class="nav-item" role="presentation">
        <button
          class="nav-link active"
          id="tab-login"
          data-bs-toggle="pill"
          data-bs-target="#pills-login"
          role="tab"
          aria-controls="pills-login"
          aria-selected="true"
        >
          Login
        </button>
      </li>

      <li class="nav-item" role="presentation">
        <button
          class="nav-link"
          id="tab-register"
          data-bs-toggle="pill"
          data-bs-target="#pills-register"
          role="tab"
          aria-controls="pills-register"
          aria-selected="false"
        >
          Register
        </button>
      </li>
    </ul>
    <!--  navs -->

    <!-- Login -->
    <div class="tab-content fw-semibold">
      <div
        class="tab-pane fade show active"
        id="pills-login"
        role="tabpanel"
        aria-labelledby="tab-login"
      >
        <form class="form-login">
          <div class="form-outline mb-4">
            <label class="form-label" for="loginName">TUK Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="voter@students.tukenya.ac.ke"
            />
            <div class="email-error"></div>
          </div>

          <div class="form-outline mb-4">
            <label class="form-label" for="loginPassword">Password</label>
            <input
              type="password"
              id="password"
              name="name"
              class="form-control"
            />
            <div class="password-error"></div>
          </div>

          <button type="submit" class="btn btn-primary btn-block mb-4">
            Login
          </button>

          <div class="text-center">
            <p>Register if not yet</p>
          </div>
        </form>
      </div>

      <!-- Register -->
      <div
        class="tab-pane fade"
        id="pills-register"
        role="tabpanel"
        aria-labelledby="tab-register"
      >
        <form class="form-register">
          <div class="form-outline mb-4">
            <label class="form-label" for="registerName">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              class="form-control"
              placeholder="Firstname    Lastname"
            />
            <div class="name-error"></div>
          </div>

          <div class="form-outline mb-4">
            <label class="form-label" for="registerUsername">TUK Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="voter@students.tukenya.ac.ke"
            />
            <div class="email-error"></div>
          </div>

          <div class="form-outline mb-4">
            <label class="form-label" for="registerEmail"
              >Registration Number</label
            >
            <input
              type="text"
              id="regno"
              name="regno"
              class="form-control"
              placeholder="SCCI/00000/2000"
            />
            <div class="registration-error"></div>
          </div>

          <div class="form-outline mb-4">
            <label class="form-label" for="registerPassword">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
            />
            <div class="password-error"></div>
          </div>

          <button type="submit" class="btn btn-primary btn-block mb-3">
            Register
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  const formLogin = document.querySelector(".form-login");
  formLogin.addEventListener("submit", (e) => {
    e.preventDefault();

    const email = formLogin.email.value;
    const password = formLogin.password.value;

    console.log(email, password);
  });

  const formRegister = document.querySelector(".form-register");
  formRegister.addEventListener("submit", (e) => {
    e.preventDefault();

    const name = formRegister.name.value;
    const email = formRegister.email.value;
    const regno = formRegister.regno.value;
    const password = formRegister.password.value;

    console.log(name, email, regno, password);
  });
</script>
