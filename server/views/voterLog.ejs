<p class="text-center mt-4 text-red fw-semibold fs-2">Voter (Login/Register)</p>
<div class="mx-4 my-5 my-5">
  <div class="col-lg-6 mx-auto">
    <!-- navs -->
    <ul class="nav nav-pills nav-justified mb-5" id="ex1" role="tablist">
      <li class="nav-item" role="presentation">
        <button
          class="nav-link active"
          id="tab-login"
          data-bs-toggle="pill"
          data-bs-target="#pills-login"
          role="tab"
          aria-controls="pills-login"
          aria-selected="true"
        >
          Login
        </button>
      </li>

      <li class="nav-item" role="presentation">
        <button
          class="nav-link"
          id="tab-register"
          data-bs-toggle="pill"
          data-bs-target="#pills-register"
          role="tab"
          aria-controls="pills-register"
          aria-selected="false"
        >
          Register
        </button>
      </li>
    </ul>
    <!--  navs -->

    <!-- Login -->
    <div class="tab-content fw-semibold">
      <div
        class="tab-pane fade show active"
        id="pills-login"
        role="tabpanel"
        aria-labelledby="tab-login"
      >
        <form>
          <div class="form-outline mb-4">
            <label class="form-label" for="loginName">TUK Email</label>
            <input
              type="email"
              id="loginName"
              class="form-control"
              placeholder="voter@students.tukenya.ac.ke"
            />
          </div>

          <div class="form-outline mb-4">
            <label class="form-label" for="loginPassword">Password</label>
            <input type="password" id="loginPassword" class="form-control" />
          </div>

          <button type="submit" class="btn btn-primary btn-block mb-4">
            Login
          </button>

          <div class="text-center">
            <p>Register if not yet</p>
          </div>
        </form>
      </div>

      <!-- Register -->
      <div
        class="tab-pane fade"
        id="pills-register"
        role="tabpanel"
        aria-labelledby="tab-register"
      >
        <form>
          <div class="form-outline mb-4">
            <label class="form-label" for="registerName">Name</label>
            <input
              type="text"
              id="registerName"
              class="form-control"
              placeholder="Firstname    Lastname"
            />
          </div>

          <div class="form-outline mb-4">
            <label class="form-label" for="registerUsername">TUK Email</label>
            <input
              type="text"
              id="registerUsername"
              class="form-control"
              placeholder="voter@students.tukenya.ac.ke"
            />
          </div>

          <div class="form-outline mb-4">
            <label class="form-label" for="registerEmail"
              >Registration Number</label
            >
            <input
              type="email"
              id="registerEmail"
              class="form-control"
              placeholder="SCCI/00000/2000"
            />
          </div>

          <div class="form-outline mb-4">
            <label class="form-label" for="registerPassword">Password</label>
            <input type="password" id="registerPassword" class="form-control" />
          </div>

          <button type="submit" class="btn btn-primary btn-block mb-3">
            Register
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
